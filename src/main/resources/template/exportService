package ${PackageName};

import ${DaoClassName};
import ${SoClassName};
import ${VoClassName};
import com.best.capital.pay.service.base.export.BaseExport;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * 系统生成导出类
 * @author admin
 * @date ${Date}
 */
@Service
public class Export${SimpleName} extends BaseExport<${SimpleName}So> {

    private static final String TEMPLATE = "${TableName}.xml";
    private static final String STORE_NAME = "${TableName}";

    @Autowired
    private ${SimpleName}Dao ${LowerCaseSimpleName}Dao;

    @Override
    public String export(${SimpleName}So so) {
        List<${SimpleName}Vo> ${LowerCaseSimpleName}List = ${LowerCaseSimpleName}Dao.listVoBySo(so);

        Map<String, List<?>> dataMap = new HashMap<>();
        dataMap.put("${LowerCaseSimpleName}", ${LowerCaseSimpleName}List);

        return super.exportToExcel(dataMap, TEMPLATE, STORE_NAME);
    }


}
